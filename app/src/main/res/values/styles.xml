        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/_8dp</item>
    </style>



    <!--================================================-->
    <!--margin-->

    <style name="marginDefaultLR" parent="android:TextAppearance.Widget">
        <item name="android:layout_marginLeft">@dimen/layoutLeftMarginDefault</item>
        <item name="android:layout_marginStart">@dimen/layoutLeftMarginDefault</item>
        <item name="android:layout_marginEnd">@dimen/layoutRightMarginDefault</item>
        <item name="android:layout_marginRight">@dimen/layoutRightMarginDefault</item>
    </style>

    <style name="marginDefaultLRDouble" parent="android:TextAppearance.Widget">
        <item name="android:layout_marginLeft">@dimen/layoutMarginDouble</item>
