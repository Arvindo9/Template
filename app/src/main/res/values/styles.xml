<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTab" parent="Widget.Design.TabLayout">
        <!--        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>-->
        <!--        <item name="android:maxHeight">?attr/actionBarSize</item>-->

        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/textColorLight</item>
        <item name="tabTextColor">@color/textColorLight</item>
        <item name="tabSelectedTextColor">@color/textColorDefault</item>
        <item name="tabBackground">@color/colorAccent</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="full_screen_dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/_20dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="default_dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DateDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="dialogBgTransparent" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!--        <item name="android:windowMinWidthMajor">90%</item>-->
        <!--        <item name="android:windowMinWidthMinor">90%</item>-->
    </style>

    <style name="FullScreenImage" parent="Theme.Design.NoActionBar">
    </style>


    <!-- Click events-->

    <!--=============================================-->
    <!--    <style name="clickTheme" parent="@android:style/Widget.Button">-->
    <style name="clickTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@drawable/ripple_action</item>
        <!--        <item name="android:background">?android:attr/selectableItemBackground</item>-->
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
        <!--        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="clickThemeBL">
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@drawable/ripple_action</item>
        <!--        <item name="android:background">?android:attr/selectableItemBackground</item>-->
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
        <!--        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="clickThemeNormal">
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <!--        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
    </style>

    <!--=============================================-->

    <!--Text ............................................ -->

    <!--For name or any main things-->
    <style name="headingText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">@dimen/text_heading_size</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:textColorHint">@color/textColorDefault</item>
    </style>

    <!--For name or any main things-->
    <style name="subHeadingText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">@dimen/text_sub_heading_size</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:textColorHint">@color/textColorDefault</item>

    </style>

    <!--Use for general-->
    <style name="bodyHeadingText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">@dimen/text_body_heading_size</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:textColorHint">@color/textColorDefault</item>
    </style>

    <!--Use for general-->
    <style name="bodyText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:textColor">@color/textColorDefault</item>
