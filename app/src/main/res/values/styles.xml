        <item name="android:layout_marginEnd">@dimen/layoutMarginDouble</item>
        <item name="android:layout_marginRight">@dimen/layoutMarginDouble</item>
    </style>

    <style name="marginDefaultLRB" parent="android:TextAppearance.Widget">
        <item name="android:layout_marginLeft">@dimen/layoutLeftMarginDefault</item>
        <item name="android:layout_marginStart">@dimen/layoutLeftMarginDefault</item>
        <item name="android:layout_marginEnd">@dimen/layoutRightMarginDefault</item>
        <item name="android:layout_marginRight">@dimen/layoutRightMarginDefault</item>
        <item name="android:layout_marginBottom">@dimen/layoutRightMarginDefault</item>
    </style>

    <style name="marginLRDivide" parent="android:TextAppearance.Widget">
        <item name="android:layout_marginLeft">@dimen/marginDivide</item>
        <item name="android:layout_marginStart">@dimen/marginDivide</item>
        <item name="android:layout_marginEnd">@dimen/marginDivide</item>
        <item name="android:layout_marginRight">@dimen/marginDivide</item>
    </style>



</resources>
