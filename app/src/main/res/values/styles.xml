    </style>

    <!--Very thin font large in height, use for age any any number-->
    <style name="lightText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_light_size</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:textColorHint">@color/textColorDefault</item>
    </style>

    <!--Very thin font large in height, use for age any any number-->
    <style name="lightTextSmall" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_light_sizeSmall</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="android:shadowColor">@color/textShadowDefaultLight</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!--Very thin font large in height, use for age any any number-->
    <style name="lightTextBig" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">@dimen/text_light_sizeBig</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:textColorHint">@color/textColorDefault</item>
    </style>

    <!--================================================-->
    <!--Images Views-->

    <style name="imageViewIcons" parent="clickTheme">
        <!--        <item name="android:paddingStart">@dimen/ic_icon_padding</item>-->
        <!--        <item name="android:paddingEnd">@dimen/ic_icon_padding</item>-->
        <!--        <item name="android:paddingTop">@dimen/ic_icon_padding_small</item>-->
